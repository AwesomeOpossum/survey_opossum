<p id="notice"><%= notice %></p>


  <h1>Your Surveys</h1>
  <form class="user-home-page">
        <div class="button-box">
           <%= link_to 'New Survey', new_survey_path, class: 'add-button'%>
           <%= button_tag 'Log Out', :class=> 'submit-button' %>
        </div>
   <table>
      <thead>
        <tr>
          <th>Published</th>
          <th>Survey Title</th>
          <th>Description</th>
          <th colspan="3"></th>

        </tr>
    </thead>
      <tbody>
          <% @surveys.each do |survey| %>
            <tr>
              <td><%= survey.title %></td>
              <td><%= survey.description %></td>
              <td><%= link_to 'Show', survey %></td>
              <td><%= link_to 'Edit', edit_survey_path(survey) %></td>

            </tr>

         <% end %>
    </tbody>
    </table>

     <br>

    </form>
