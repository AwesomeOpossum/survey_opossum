<%= form_for(@survey) do |f| %>
  <% if @survey.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@survey.errors.count, "error") %> prohibited this survey from being saved:</h2>

      <ul>
      <% @survey.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title, 'Tell us the name of your survey:', class:'text' %><br>
    <%= f.text_field :title, placeholder: 'Survey Title', class:'text' %>
  </div>
  <div class="field">
    <%= f.label :description, 'Describe your survey:', class:'text' %><br>
    <%= f.text_area :description, class:'text' %>
  </div>
  <div class="field">
    <%= f.label :author_id %><br>
    <%= f.number_field :author_id %>
  </div>


  <footer class="actions">

    <span>
    <%= f.button "Add New Question", type: 'button', class: 'add-button' %>
    </span>

    <span>
    <%= f.label :publish, class:'text' %>
    <%= f.check_box :publish %>
    </span>

    <span>
    <%= f.button "Save", class:'submit-button' %>
    </span>

  </footer>

<% end %>



