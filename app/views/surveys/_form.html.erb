<%= form_for(@survey) do |f| %>
  <% if @survey.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@survey.errors.count, "error") %> prohibited this survey from being saved:</h2>

      <ul>
      <% @survey.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title%><br>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </div>
  <div class="field">
    <%= f.hidden_field :author_id %>
  </div>
  <div class="field">
    <%= f.label :publish %><br>
    <%= f.check_box :publish %>
  </div>
  <h3> Questions: </h3>
  <%= f.fields_for(:questions) do |ff| %>
    <div class="question-box">
      <div class="field">
        <%= ff.label :question_type, 'Select Question Type' %><br>
        <%= ff.select :question_type, options_for_select(["Yes/No", "Short Answer", "Long Answer"]), include_blank: 'Please Select' %>
      </div>
      <div class="field">
        <%= ff.label :question_text, 'Enter Question:' %><br>
        <%= ff.text_area :question_text%>
      </div>
      <div class="field">
        <%= ff.label :required %><br>
        <%= ff.check_box :required %>
      </div>
      <div class="field">
        <%= ff.label :order_number %><br>
        <%= ff.number_field :order_number %>
      </div>
      <div class="field">
        <%= ff.label :_destroy %><br>
        <%= ff.check_box :_destroy %>
      </div>
    </div>
  <% end %>

  <div class="actions">
    <%= f.button "Save"%>
  </div>
<% end %>
